/* IMPORTACIONES */ /* BACK UP DEL CSS DE INICIO */

@import url('https://fonts.googleapis.com/css2?family=Bai+Jamjuree:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Dela+Gothic+One&family=Readex+Pro:wght@160..700&display=swap');

:root {
    --main-color-blue: #b3dae2;
    --main-color-blue-opacity: #b3dae2be;
    --main-color-blue-b: #4979fc;
    --main-color-yellow: #ECED86;
    --main-color-black: #0f0f0f;
    --main-color-white: #e0e0e0;
    --font-bold: "Dela Gothic One", sans-serif;
    --font-header: "Readex Pro", sans-serif;
    --font-text: "Bai Jamjuree", sans-serif;
}

/* Reset */
* { 
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: var(--main-color-white);
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;
}

.normal-text {
    font-family: var(--font-text);
    font-weight: 400;
    font-style: normal;
}



#cabecera {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5em 1em;
    height: 10vh;
    min-height: 60px;
    width: 100%;
    background-color: var(--main-color-blue);
    font-family: var(--font-header);
    z-index: 100;
}

#left {
    display: flex;
    align-items: center;
    gap: 10px;
    height: 100%;
}

/* ðŸ‘‡ This is the new updated #logo style */
#logo {
    height: 100%;
    max-height: 100%;
    width: auto;
    object-fit: contain;
    display: block;
    cursor: pointer;
}

#cabecera a:not(.dropdown-content) {
    font-family: var(--font-bold); /* Makes text bolder and more prominent */
    font-size: 1.1em; /* Slightly larger font for visibility */
    color: var(--main-color-black);
    text-decoration: none;
    margin: 0 0.75em;
    padding: 0.4em 0.6em;
    transition: all 0.3s ease-in-out;
    border-radius: 0.4em;
    background-color: var(--main-color-yellow);
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.15);
}

#cabecera a:hover {
    background-color: var(--main-color-blue-b);
    color: var(--main-color-white);
    transform: scale(1.05);
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3);
}

/* Right-side navigation */
#menu {
    display: flex;
    align-items: center;
    gap: 20px;
}


/* The side navigation menu */
.sidenav {
    height: 100%; /* 100% Full-height */
    width: 0; /* 0 width - change this with JavaScript */
    position: fixed; /* Stay in place */
    z-index: 1; /* Stay on top */
    top: 0;
    left: 0;
    background-color: var(--main-color-yellow); /* Black*/
    overflow-x: hidden; /* Disable horizontal scroll */
    padding-top: 60px; /* Place content 60px from the top */
    transition: 0.5s; /* 0.5 second transition effect to slide in the sidenav */

    /* FOR FOOTER */
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.sidenav h1 {
    margin-left: 10% !important;
}

.sidenav > h1 > a {
    margin-left: 0;
}

/* The navigation menu links */
.sidenav a, .sidenav h1{
    font-family: var(--font-header);
    padding: 8px 0px;
    margin-left: 15%;
    text-decoration: none;
    font-size: 25px;
    color: var(--main-color-black);
    display: block;
    transition: 0.3s;
    text-wrap: nowrap;
}

#footerSideNav {
    padding: 8px 0px;
    margin-left: 10%;
    text-decoration: none;
    color: var(--main-color-black);
    transition: 0.3s;
    text-wrap: nowrap;
    margin-top: auto;
}

.sidenav > *:not(#footerSideNav) {
    flex-shrink: 0;
}

/* When you mouse over the navigation links, change their color */
.sidenav a:hover:not([disabled]){
    color: var(--main-color-blue-b);
}

/* Position and style the close button (top right corner) */
.sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

/* Style page content - use this if you want to push the page content to the right when you open the side navigation */
#main {
    height: 100vh;
    display: flex;
    flex-direction: column;
    flex: 1;
    transition: margin-left 0.5s;
    background-color: var(--main-color-white);
    
}

/* On smaller screens, where height is less than 450px, change the style of the sidenav (less padding and a smaller font size) */
@media screen and (max-height: 450px) {
    .sidenav {
        padding-top: 15px;
    }
    .sidenav a {
        font-size: 18px;
    }
}

/* Container for the dropdown */
.dropdown {
    position: relative;
    display: inline-block;
}

/* Style for the clickable dropdown button */
.dropbtn {
    background-color: var(--main-color-yellow);
    color: var(--main-color-black);
    font-family: var(--font-bold);
    padding: 0.5em 1em;
    border: none;
    border-radius: 0.5em;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
}

.dropbtn:hover {
    background-color: var(--main-color-blue-b);
    color: var(--main-color-white);
}

.dropdown-content {
    position: absolute;
    top: 120%;
    left: -10px;
    min-width: 180px;
    background-color: var(--main-color-white);
    border-radius: 0.7em;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.25);
    z-index: 999;
    padding: 0.5em 0;
    overflow: hidden;

    opacity: 0;
    transform: translateY(-10px); /* Start slightly above */
    visibility: hidden;
    transition: transform 0.3s ease, opacity 0.3s ease;
}


/* Show with slide-from-top effect */
.dropdown-content.show {
    opacity: 1;
    transform: translateY(0); /* Slide to correct position */
    visibility: visible;
}

/* Each link in the dropdown */
.dropdown-content a {
    background-color: var(--main-color-blue) !important;
    font-family: var(--font-text);
    color: var(--main-color-black);
    padding: 0.6em 1em;
    text-decoration: none;
    display: block;
    transition: background-color 0.2s ease;
    white-space: nowrap;
}

.dropdown-content a:hover {
    background-color: var(--main-color-blue-b) !important;
    color: var(--main-color-black);
}

/* EFECTO ARCOIRIS Y ESTILO DE LETRA */
.tituloPrincipal, .tituloSecundario {
    width: fit-content;
    text-align: center;
    font-size: 3rem;
    font-family: var(--font-bold);
    letter-spacing: 0.15rem;
    text-transform: uppercase;
    color: var(--main-color-black);
    transition: all 200ms ease-in-out;
    font-size: clamp(1em, 1.8vw, 3em);
    z-index: 4;
}

.tituloPrincipal:hover, .tituloSecundario:hover {
    text-shadow: 4px 2px 3px #b71c1c,
                8px 4px 3px #e65100 ,
                12px 6px 3px #f9a825,
                16px 8px 3px #00695c,
                20px 10px 3px #0d47a1,
                24px 12px 3px #4a148c
}

#principal {
    width: 100vw;
    height: 70vh;
    flex: 2;
    min-height: 0;
}

.bg-image-mouse {
    background-image: url("../img/bg-mouse.jpg");
}

.bg-image-keyboard {
    background-image: url("../img/bg-keyboard.webp");
}

.bg-image-audio {
    background-image: url("../img/bg-headset.webp");
}

.bg-image-screen {
    background-image: url("../img/bg-screen.webp");
}

.bg-image-mousepad {
    background-image: url("../img/bg-mousepad.jpg");
}


.bg-image-mouse {

    /* Add the blur effect */
    filter: blur(3px);
    -webkit-filter: blur(3px);

    /* Full height */
    height: 100%;
    margin-left: -5vw;
    width: 110vw;
    margin-top: -0.5vh;
    /* Center and scale the image nicely */
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    z-index: 0;
}

/* Position text in the middle of the page/image */
.bg-text-mouse {
    background-color: var(--main-color-blue-opacity); /* blue w/opacity/see-through */
    border: 3px solid var(--main-color-blue);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -120%);
    z-index: 0;
    width: 25%;
    padding: 20px;
    text-align: center;
    border-radius: 0.4em;
    min-width: fit-content;
    display: flex;
    justify-content: center;
}

#secundarios {
    display: flex;
    flex-wrap: nowrap;
    height: 26vh;
    flex: 1;
    min-height: 0;
    max-height: 30vh; /* Optional limit */
}

.secundario-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
}

.bg-image-secundarios {
    filter: blur(3px);
    -webkit-filter: blur(3px);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;  /* No 110vw */
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    z-index: 0;
}

/* Text block on top of background */
.bg-text-secundarios {
    position: relative; /* Stack above background */
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--main-color-blue-opacity);
    border: 3px solid var(--main-color-blue);
    padding: 20px;
    text-align: center;
    border-radius: 0.4em;
    width: fit-content;
    margin: auto; /* center inside wrapper */
    top: 50%;
    transform: translateY(-50%);
}

.secundario {
    position: relative;
    flex: 1;
    height: 100%;
    overflow: hidden;
}

.section-link-overlay {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    z-index: -1; /* behind text visually, but pointer-events still happen */
    cursor: pointer;
    z-index: 2;
}

#loader {
    position: fixed;
    inset: 0;
    background: var(--main-color-black);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.4s ease;
}

#loader.hidden {
    opacity: 0;
    pointer-events: none;
}

.spinner {
    width: 80px;
    height: 80px;
    border: 8px solid var(--main-color-blue-opacity);
    border-top: 8px solid var(--main-color-blue-b);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
}

.loader-text {
    font-family: var(--font-header);
    font-size: 1.5rem;
    color: var(--main-color-yellow);
    text-shadow: 0 0 10px var(--main-color-yellow);
    animation: glow 2s ease-in-out infinite alternate;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@keyframes glow {
    from { text-shadow: 0 0 10px var(--main-color-yellow); }
    to   { text-shadow: 0 0 20px var(--main-color-yellow), 0 0 30px var(--main-color-yellow); }
}